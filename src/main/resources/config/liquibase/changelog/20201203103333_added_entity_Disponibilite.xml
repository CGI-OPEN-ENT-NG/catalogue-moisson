    <!--
        Added the entity Disponibilite.
    -->
    <changeSet id="20201203103333-1" author="moisson">
        <createTable tableName="disponibilite">
            <column name="id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="commentaire" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <column name="date_disponibilite" type="datetime">
                <constraints nullable="true" />
            </column>
            <column name="commandable" type="boolean">
                <constraints nullable="true" />
            </column>
            <column name="valeur" type="varchar(255)">
                <constraints nullable="true" />
            </column>
            <!-- Add columns here -->
        </createTable>
        <dropDefaultValue tableName="disponibilite" columnName="date_disponibilite" columnDataType="datetime"/>
    </changeSet>

